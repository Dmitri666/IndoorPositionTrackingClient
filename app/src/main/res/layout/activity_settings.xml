<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lps.lpsapp.activities.SettingsActivity">

    <EditText
        android:id="@+id/tbBeaconCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="BeaconCount" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send to server"
        android:id="@+id/switch_send_to_server"
        android:layout_below="@+id/tbBeaconCount"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="use beacon simulator"
        android:id="@+id/switch_use_beacon_simulator"
        android:layout_below="@+id/switch_send_to_server"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show circles"
        android:id="@+id/switch_show_circles"
        android:layout_below="@+id/switch_use_beacon_simulator"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp" />
</RelativeLayout>
